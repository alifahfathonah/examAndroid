<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_exam_essay"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
    android:id="@+id/rl_essay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
        android:id="@+id/tv_essay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toEndOf="@id/tv_number"
        android:layout_marginStart="5dp"/>

        <EditText
        android:id="@+id/edt_jawaban_essay"
        android:background="@drawable/edit_essay"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/tv_essay"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:paddingStart="10dp"
        android:hint="@string/input_jawaban"
        tools:ignore="LabelFor,RtlSymmetry" />

    </RelativeLayout>

</android.support.v7.widget.CardView>